md-dialog
	md-toolbar
		.md-toolbar-tools
			h4 Nuevo Abogado
			span(flex)
			md-button(ng-click="close()")
				md-icon clear
	form.md-padding(layout="row" ng-submit="submit(abogado)")
		md-input-container(flex)
			label Nombre
			input(ng-model="abogado.nombre" required)
		md-button.md-raised(type="submit")
			md-icon add
