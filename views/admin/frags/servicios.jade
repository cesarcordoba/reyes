md-card
	md-subheader Servicios
	md-card-content(layout="row")
		md-autocomplete(
		flex
		md-selected-item="ctrl.selectedServicios" 
		md-search-text-change="ctrl.BuscarServiciosChange(ctrl.searchTextServicios)" 
		md-search-text="ctrl.searchTextServicios" 
		md-selected-item-change="ctrl.ServiciosSeleccionadoChange(item)" 
		md-items="item in servicios" 
		md-item-text="item.nombre" 
		md-min-length="0" 
		placeholder="Nombre del Servicio" 
		md-menu-class="autocomplete-custom-template")
			md-item-template
				span {{item.nombre}}
		md-button.md-raised(md-colors="{background: 'green'}" ng-click="nuevo()")
			md-icon add
	md-divider
	md-list
		md-list-item(ng-repeat="servicio in servicios")
			md-icon(md-svg-icon="{{servicio.logo}}")
			.md-list-item-text
				strong {{servicio.nombre}}
			md-fab-toolbar(md-open="false" count="0"  md-direction="left" flex)
				md-fab-trigger
					md-button
						md-icon more_vert
				md-toolbar
					md-fab-actions(layout="row")
						md-button(md-colors="{background: 'green'}" ui-sref="servicio({id:servicio.id})")
							md-icon edit
						md-button(md-colors="{background: 'red'}" ng-click="eliminarServicio(servicio,$index)")
							md-icon clear
			md-divider
