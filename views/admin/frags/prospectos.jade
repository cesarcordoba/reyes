md-card
	md-subheader Prospectos
	md-card-content(layout="row")
		md-autocomplete(
		flex
		md-selected-item="ctrl.selectedProspectos" 
		md-search-text-change="ctrl.BuscarProspectosChange(ctrl.searchTextProspectos)" 
		md-search-text="ctrl.searchTextProspectos" 
		md-selected-item-change="ctrl.ProspectosSeleccionadoChange(item)" 
		md-items="item in prospectos" 
		md-item-text="item.nombre" 
		md-min-length="0" 
		placeholder="Nombre de los prospectos" 
		md-menu-class="autocomplete-custom-template")
			md-item-template
				span {{item.nombre}}
	md-divider
	md-list
		md-list-item(ng-repeat="prospecto in prospectos")
			.md-list-item-text
				strong {{prospecto.nombre}}
			md-fab-toolbar(md-open="false" count="0"  md-direction="left" flex)
				md-fab-trigger
					md-button
						md-icon more_vert
				md-toolbar
					md-fab-actions(layout="row")
						md-button(md-colors="{background: 'green'}" ui-sref="topico({id:topico.id})")
							md-icon edit
						md-button(md-colors="{background: 'red'}" ng-click="eliminarTopico(topico,$index)")
							md-icon clear
			md-divider


md-card
	md-toolbar
		.md-toolbar-tools
			h4 Contactos
	md-table-container
		table(md-table md-row-select multiple)
			thead(md-head)
				tr(md-row)
					th(md-column md-numeric md-order-by="contacto.createdAt")
						md-icon date_range
						strong Fecha
					th(md-column md-numeric)
						md-icon person
						strong Nombre
					th(md-column md-numeric)
						md-icon mail
						| E-mail
			tbody(md-body)
				tr(md-row md-select="dato" md-select-id="name" md-auto-select ng-repeat="contacto in contactos")
					td(md-cell) {{contacto.createdAt | date:'medium' }}
					td(md-cell) {{contacto.nombre}}
					td(md-cell) {{contacto.correo}}
	md-table-pagination(md-page-select)
