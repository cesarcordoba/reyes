md-card
	md-subheader Topicos
	md-card-content(layout="row")
		md-autocomplete(
		flex
		md-selected-item="ctrl.selectedTopico" 
		md-search-text-change="ctrl.BuscarTopicoChange(ctrl.searchTextTopico)" 
		md-search-text="ctrl.searchTextTopico" 
		md-selected-item-change="ctrl.TopicoSeleccionadoChange(item)" 
		md-items="item in topicos" 
		md-item-text="item.nombre" 
		md-min-length="0" 
		placeholder="Nombre de los Topicos" 
		md-menu-class="autocomplete-custom-template")
			md-item-template
				span {{item.nombre}}
		md-button.md-raised(md-colors="{background: 'green'}" ng-click="nuevo()")
			md-icon add

	md-divider
	md-list
		md-list-item(ng-repeat="topico in topicos")
			md-icon(md-svg-icon="{{topico.servicio.logo}}")
			.md-list-item-text
				strong {{topico.nombre}}
			md-fab-toolbar(md-open="false" count="0"  md-direction="left" flex)
				md-fab-trigger
					md-button
						md-icon more_vert
				md-toolbar
					md-fab-actions(layout="row")
						md-button(md-colors="{background: 'green'}" ui-sref="topico({id:topico.id})")
							md-icon edit
						md-button(md-colors="{background: 'red'}" ng-click="eliminarTopico(topico,$index)")
							md-icon clear
			md-divider
